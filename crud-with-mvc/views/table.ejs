<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div align="center">
        <h1>View Record</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Srno</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Gender</th>
                    <th>Hobby</th>
                    <th>City</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.map((val,index)=>{ 
                        const {name,email,password,gender,hobby,city,image} = val;
                    %>
                    <tr>
                        <td><%= ++index %></td>
                        <td><%= name %></td>
                        <td><%= email %></td>
                        <td><%= password %></td>
                        <td><%= gender %></td>
                        <td><%= hobby %></td>
                        <td><%= city %></td>
                        <td>
                            <img src="<%= image %>" width="100"/>
                        </td>
                        <td>
                            <a href="/crud/deleteRecord?id=<%= val.id %>">Delete</a> ||
                            <a href="/crud/editRecord?id=<%= val.id %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/crud/add">Add</a>
    </div>
</body>
</html>